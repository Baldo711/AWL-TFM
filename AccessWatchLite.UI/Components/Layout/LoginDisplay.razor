@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center">
            <span class="text-white me-3">
                <i class="bi bi-person-circle me-1"></i>
                @context.User.Identity?.Name
            </span>
            <a href="MicrosoftIdentity/Account/SignOut" class="btn btn-sm btn-outline-light">
                <i class="bi bi-box-arrow-right me-1"></i>
                Cerrar sesión
            </a>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="MicrosoftIdentity/Account/SignIn" class="btn btn-sm btn-primary">
            <i class="bi bi-box-arrow-in-right me-1"></i>
            Iniciar sesión
        </a>
    </NotAuthorized>
</AuthorizeView>
