@page "/simulator"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using AccessWatchLite.Application.Services
@using System.Timers
@rendermode InteractiveServer
@inject AccessWatchLite.UI.Services.CsvImportService ImportService
@inject ISimAnalysisService AnalysisService
@implements IDisposable

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-3">
                <i class="bi bi-file-earmark-spreadsheet me-2"></i>
                Simulador de Eventos de Acceso
            </h1>
            <p class="text-muted mb-4">
                Carga un archivo CSV con eventos de acceso simulados para probar el sistema de detección de anomalías.
                <br />
                <small><strong>Formato requerido:</strong> Separador <code>;</code>, con cabeceras estándar de Microsoft Entra ID</small>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-12">
            <!-- Card de carga de archivo -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-cloud-upload me-2"></i>
                        Seleccionar Archivo
                    </h5>
                    
                    <div class="upload-area p-4 border rounded text-center @(_file is not null ? "border-success" : "border-secondary")" 
                         style="border-style: dashed !important; background-color: @(_file is not null ? "#d4edda" : "#f8f9fa");">
                        <InputFile OnChange="OnFileSelected" 
                                   accept=".csv" 
                                   class="form-control form-control-lg mb-3" 
                                   id="fileInput" />
                        
                        @if (_file is not null)
                        {
                            <div class="alert alert-success mb-0">
                                <i class="bi bi-check-circle me-2"></i>
                                <strong>@_file.Name</strong>
                                <span class="text-muted ms-2">(@GetFileSize(_file.Size))</span>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">
                                <i class="bi bi-file-earmark-arrow-up" style="font-size: 3rem;"></i>
                                <br />
                                Selecciona un archivo CSV
                            </p>
                        }
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary btn-lg" 
                                @onclick="Upload" 
                                disabled="@(_file is null || _busy)">
                            @if (_busy)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <span>Procesando...</span>
                            }
                            else
                            {
                                <i class="bi bi-upload me-2"></i>
                                <span>Cargar y Procesar CSV</span>
                            }
                        </button>
                    </div>
                </div>
            </div>

            <!-- Card de estado -->
            @if (!string.IsNullOrWhiteSpace(_currentStep) || !string.IsNullOrWhiteSpace(_statusMessage))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-activity me-2"></i>
                            Estado del Proceso
                        </h5>

                        @if (!string.IsNullOrWhiteSpace(_currentStep))
                        {
                            <div class="alert @GetStepAlertClass() d-flex align-items-center mb-3">
                                <i class="@GetStepIcon() me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <strong>@_currentStep</strong>
                                    @if (_busy)
                                    {
                                        <div class="spinner-border spinner-border-sm ms-2" role="status"></div>
                                    }
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(_statusMessage))
                        {
                            <div class="alert @GetStatusAlertClass() d-flex align-items-center mb-0">
                                <i class="@GetStatusIcon() me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    @_statusMessage
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(_logUri))
                        {
                            <div class="alert alert-info d-flex align-items-center justify-content-between mt-3 mb-0">
                                <div>
                                    <i class="bi bi-file-text me-2"></i>
                                    <strong>Log de procesamiento disponible</strong>
                                    <br />
                                    <small class="text-muted">
                                        La Azure Function generará un archivo de log cuando termine de procesar el CSV.
                                        <br />
                                        <span class="badge bg-warning text-dark mt-1">
                                            <i class="bi bi-clock me-1"></i>
                                            Este enlace expira en 24 horas
                                        </span>
                                    </small>
                                </div>
                                <a href="@_logUri" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-download me-1"></i>
                                    Ver Log
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Card de detalles (colapsable) -->
            @if (_comparison is not null)
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            Detalles de Validación
                        </h5>

                        <div class="accordion" id="detailsAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button @(_hasErrors ? "" : "collapsed")" 
                                            type="button" 
                                            data-bs-toggle="collapse" 
                                            data-bs-target="#collapseDetails">
                                        <i class="bi bi-list-columns-reverse me-2"></i>
                                        Análisis de Columnas
                                        <span class="badge bg-primary ms-2">@_comparison.MatchingCount coincidentes</span>
                                        @if (_comparison.ExtraCount > 0)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">@_comparison.ExtraCount extras</span>
                                        }
                                        @if (_comparison.MissingCount > 0)
                                        {
                                            <span class="badge bg-danger ms-1">@_comparison.MissingCount faltantes</span>
                                        }
                                    </button>
                                </h2>
                                <div id="collapseDetails" class="accordion-collapse collapse @(_hasErrors ? "show" : "")" data-bs-parent="#detailsAccordion">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="text-center p-3 bg-light rounded">
                                                    <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                                                    <h4 class="mt-2">@_comparison.MatchingCount</h4>
                                                    <small class="text-muted">Columnas Válidas</small>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="text-center p-3 bg-light rounded">
                                                    <i class="bi bi-exclamation-triangle @(_comparison.ExtraCount > 0 ? "text-warning" : "text-muted")" style="font-size: 2rem;"></i>
                                                    <h4 class="mt-2">@_comparison.ExtraCount</h4>
                                                    <small class="text-muted">Columnas Extra</small>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="text-center p-3 bg-light rounded">
                                                    <i class="bi bi-x-circle @(_comparison.MissingCount > 0 ? "text-danger" : "text-muted")" style="font-size: 2rem;"></i>
                                                    <h4 class="mt-2">@_comparison.MissingCount</h4>
                                                    <small class="text-muted">Columnas Faltantes</small>
                                                </div>
                                            </div>
                                        </div>

                                        @if (_comparison.ExtraHeaders.Count > 0)
                                        {
                                            <div class="mt-3">
                                                <h6 class="text-warning">
                                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                                    Columnas Extra (no reconocidas):
                                                </h6>
                                                <div class="border rounded p-2 bg-light">
                                                    @foreach (var header in _comparison.ExtraHeaders)
                                                    {
                                                        <span class="badge bg-warning text-dark me-1 mb-1">@header</span>
                                                    }
                                                </div>
                                            </div>
                                        }

                                        @if (_comparison.MissingHeaders.Count > 0)
                                        {
                                            <div class="mt-3">
                                                <h6 class="text-danger">
                                                    <i class="bi bi-x-circle me-2"></i>
                                                    Columnas Faltantes (requeridas):
                                                </h6>
                                                <div class="border rounded p-2 bg-light">
                                                    @foreach (var header in _comparison.MissingHeaders)
                                                    {
                                                        <span class="badge bg-danger me-1 mb-1">@header</span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            
            <!-- Card de Análisis -->
            <div class="card shadow-sm mb-4 border-@(_isAnalyzing ? "warning" : (_analysisResult?.Success == true ? "success" : "secondary"))">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-cpu me-2"></i>
                        Análisis de Eventos Simulados
                    </h5>
                    
                    @if (_isLoadingMetadata)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary mb-3" role="status"></div>
                            <p class="text-muted mb-0">Verificando datos disponibles...</p>
                        </div>
                    }
                    else if (_dateRange.min.HasValue && _dateRange.max.HasValue && _hasSimulationData)
                        {
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-calendar-range me-2"></i>
                                <strong>Rango de datos disponibles:</strong>
                                @_dateRange.min.Value.ToString("yyyy-MM-dd") - @_dateRange.max.Value.ToString("yyyy-MM-dd")
                            </div>
                            
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Fecha Inicio</label>
                                    <input type="date" class="form-control" 
                                           @bind="_analysisStartDate" 
                                           min="@_dateRange.min.Value.ToString("yyyy-MM-dd")"
                                           max="@_dateRange.max.Value.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Fecha Fin</label>
                                    <input type="date" class="form-control" 
                                           @bind="_analysisEndDate" 
                                           min="@_dateRange.min.Value.ToString("yyyy-MM-dd")"
                                           max="@_dateRange.max.Value.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            
                            <div class="d-grid">
                                <button class="btn btn-warning btn-lg" 
                                        @onclick="RunAnalysis" 
                                        disabled="@(_isAnalyzing || !_hasSimulationData)">
                                    @if (_isAnalyzing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Analizando eventos...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-lightning-charge me-2"></i>
                                        <span>ANALIZAR EVENTOS</span>
                                    }
                                </button>
                            </div>
                            
                            <!-- Barra de progreso en tiempo real -->
                            @if (_isAnalyzing && _analysisProgress is not null)
                            {
                                <div class="mt-3 p-3 border rounded bg-light">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <strong>Progreso del Análisis</strong>
                                        <span class="badge bg-primary">@_analysisProgress.ProgressPercentage.ToString("F1")%</span>
                                    </div>
                                    
                                    <div class="progress mb-3" style="height: 25px;">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                             role="progressbar" 
                                             style="width: @(_analysisProgress.ProgressPercentage)%"
                                             aria-valuenow="@_analysisProgress.ProcessedEvents" 
                                             aria-valuemin="0" 
                                             aria-valuemax="@_analysisProgress.TotalEvents">
                                            @_analysisProgress.ProcessedEvents / @_analysisProgress.TotalEvents
                                        </div>
                                    </div>
                                    
                                    <div class="small text-muted">
                                        <div>
                                            <i class="bi bi-calendar-event me-1"></i>
                                            <strong>Última fecha procesada:</strong> 
                                            @(_analysisProgress.LastProcessedDate?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")
                                        </div>
                                        <div class="mt-1">
                                            <i class="bi bi-person me-1"></i>
                                            <strong>Último usuario:</strong> 
                                            @(_analysisProgress.LastProcessedUser ?? "N/A")
                                        </div>
                                        <div class="mt-1">
                                            <i class="bi bi-shield-exclamation me-1"></i>
                                            <strong>Alertas creadas:</strong> 
                                            @_analysisProgress.AlertsCreated
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning mb-0">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                No hay datos de simulación disponibles. Carga un archivo CSV primero.
                            </div>
                        }
                        
                        <!-- Resultados del análisis -->
                        @if (_analysisResult is not null)
                        {
                            <div class="mt-3 p-3 bg-light rounded">
                                <h6 class="text-success mb-3">
                                    <i class="bi bi-check-circle-fill me-2"></i>
                                    Análisis Completado
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="card border-primary">
                                            <div class="card-body text-center">
                                                <h4 class="mb-0">@_analysisResult.EventsProcessed</h4>
                                                <small class="text-muted">Eventos Procesados</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-danger">
                                            <div class="card-body text-center">
                                                <h4 class="mb-0">@_analysisResult.AlertsCreated</h4>
                                                <small class="text-muted">Alertas Generadas</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border-danger">
                                            <div class="card-body text-center py-2">
                                                <h5 class="mb-0 text-danger">@_analysisResult.AlertsBySeverity.GetValueOrDefault("High", 0)</h5>
                                                <small class="text-muted">Alto</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border-warning">
                                            <div class="card-body text-center py-2">
                                                <h5 class="mb-0 text-warning">@_analysisResult.AlertsBySeverity.GetValueOrDefault("Medium", 0)</h5>
                                                <small class="text-muted">Medio</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border-info">
                                            <div class="card-body text-center py-2">
                                                <h5 class="mb-0 text-info">@_analysisResult.AlertsBySeverity.GetValueOrDefault("Low", 0)</h5>
                                                <small class="text-muted">Bajo</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>
                                        Completado en @_analysisResult.DurationSeconds.ToString("F2") segundos
                                    </small>
                                </div>
                                <div class="d-grid mt-3">
                                    <a href="/dashboard" class="btn btn-primary">
                                        <i class="bi bi-shield-exclamation me-2"></i>
                                        Ver Alertas en Dashboard
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
        </div>

        <!-- Sidebar con ayuda -->
        <div class="col-lg-4 col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-question-circle me-2"></i>
                        ¿Cómo funciona?
                    </h5>
                    <ol class="small">
                        <li class="mb-2">
                            <strong>Selecciona</strong> un archivo CSV con eventos de acceso simulados
                        </li>
                        <li class="mb-2">
                            <strong>El sistema verifica</strong> el formato y las columnas requeridas
                        </li>
                        <li class="mb-2">
                            <strong>Se sube</strong> a Azure Blob Storage (<code>sim/upfiles/</code>)
                        </li>
                        <li class="mb-2">
                            <strong>Se copia</strong> a la carpeta de carga (<code>sim/loader/</code>)
                        </li>
                        <li class="mb-2">
                            <strong>La Azure Function</strong> procesa el archivo automáticamente
                        </li>
                        <li class="mb-2">
                            <strong>Los datos</strong> se cargan en la tabla <code>sim_Events</code>
                        </li>
                    </ol>

                    <hr />

                    <h6 class="mt-3">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        Formato esperado
                    </h6>
                    <ul class="small">
                        <li>Separador: <code>;</code> (punto y coma)</li>
                        <li>Codificación: UTF-8</li>
                        <li>Primera fila: Cabeceras</li>
                        <li>Columnas requeridas: mínimo 11</li>
                    </ul>

                    <div class="alert alert-info small mb-0 mt-3">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Tip:</strong> Puedes obtener logs reales desde el portal de Microsoft Entra ID 
                        (Azure AD) → Sign-in logs → Download CSV
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
private IBrowserFile? _file;
private bool _busy;
private string? _currentStep;
private string? _statusMessage;
private string? _logUri;
private bool _hasErrors;
private AccessWatchLite.UI.Services.CsvHeaderComparison? _comparison;

// Variables para análisis de simulación
private bool _hasSimulationData;
private bool _isAnalyzing;
private (DateTime? min, DateTime? max) _dateRange;
private DateTime? _analysisStartDate;
private DateTime? _analysisEndDate;
private AnalysisResult? _analysisResult;
private AnalysisProgress? _analysisProgress;
private bool _isLoadingMetadata = true;
private System.Timers.Timer? _progressTimer;

protected override async Task OnAfterRenderAsync(bool firstRender)
{
    if (firstRender)
    {
        _ = Task.Run(async () =>
        {
            await CheckSimulationData();
            await InvokeAsync(StateHasChanged);
        });
    }
}

private async Task CheckSimulationData()
{
    _isLoadingMetadata = true;
    try
    {
        // Intentar obtener metadatos (rápido si existe la tabla)
        var hasData = await AnalysisService.HasSimulationDataAsync();
        _hasSimulationData = hasData.hasData;
        _dateRange = hasData.dateRange;
        
        if (_dateRange.min.HasValue && _dateRange.max.HasValue)
        {
            // Inicializar fechas con el rango completo disponible
            _analysisStartDate = _dateRange.min.Value;
            _analysisEndDate = _dateRange.max.Value;
        }
    }
    catch (Exception ex)
    {
        // Si falla (tabla no existe), intentar obtener rango directamente
        Console.WriteLine($"Error checking simulation metadata: {ex.Message}");
        try
        {
            var dateRange = await AnalysisService.GetDateRangeAsync();
            _hasSimulationData = dateRange.min.HasValue && dateRange.max.HasValue;
            _dateRange = dateRange;
            
            if (_dateRange.min.HasValue && _dateRange.max.HasValue)
            {
                _analysisStartDate = _dateRange.min.Value;
                _analysisEndDate = _dateRange.max.Value;
            }
        }
        catch (Exception ex2)
        {
            Console.WriteLine($"Error getting date range: {ex2.Message}");
            _hasSimulationData = false;
        }
    }
    finally
    {
        _isLoadingMetadata = false;
    }
}

private async Task RunAnalysis()
{
    if (!_hasSimulationData || _isAnalyzing)
        return;

    _isAnalyzing = true;
    _analysisResult = null;
    _analysisProgress = null;
    StateHasChanged();

    // Iniciar timer para polling de progreso cada 2 segundos
    _progressTimer = new System.Timers.Timer(2000);
    _progressTimer.Elapsed += async (sender, e) => await PollProgressAsync();
    _progressTimer.Start();

    try
    {
        var result = await AnalysisService.TriggerAnalysisAsync(
            _analysisStartDate, 
            _analysisEndDate);
        _analysisResult = result;
    }
    catch (Exception ex)
    {
        _analysisResult = new AnalysisResult
        {
            Success = false,
            Message = $"Error: {ex.Message}"
        };
    }
    finally
    {
        _progressTimer?.Stop();
        _progressTimer?.Dispose();
        _progressTimer = null;
        _isAnalyzing = false;
        _analysisProgress = null;
        StateHasChanged();
    }
}

private async Task PollProgressAsync()
{
    try
    {
        _analysisProgress = await AnalysisService.GetAnalysisProgressAsync();
        await InvokeAsync(StateHasChanged);
    }
    catch (Exception ex)
    {
        Console.WriteLine($"Error polling progress: {ex.Message}");
    }
}

public void Dispose()
{
    _progressTimer?.Stop();
    _progressTimer?.Dispose();
}

private void OnFileSelected(InputFileChangeEventArgs e)
{
    _file = e.FileCount > 0 ? e.File : null;
    _currentStep = null;
    _statusMessage = null;
    _logUri = null;
    _comparison = null;
    _hasErrors = false;
}

private async Task Upload()
{
    if (_file is null) return;

    _busy = true;
    _currentStep = null;
    _statusMessage = null;
    _logUri = null;
    _comparison = null;
    _hasErrors = false;

    try
    {
        // Paso 1: Validando formato
        _currentStep = "📄 Validando formato del archivo...";
        StateHasChanged();
        await Task.Delay(300); // Pequeño delay para que se vea el cambio

        // Paso 2: Subiendo a Blob
        _currentStep = "☁️ Subiendo archivo a Azure Blob Storage...";
        StateHasChanged();
        await Task.Delay(300);

        // Paso 3: Verificando columnas
        _currentStep = "🔍 Verificando columnas del CSV...";
        StateHasChanged();

        var result = await ImportService.UploadAndTestSqlAsync(_file, CancellationToken.None);
        _comparison = result.HeaderComparison;
        _logUri = result.LogUri;

        // Paso 4: Archivo subido, esperando procesamiento
        if (result.Ok && !string.IsNullOrWhiteSpace(result.LogBlobName))
        {
            _currentStep = "⏳ Archivo subido. Esperando procesamiento por Azure Function...";
            _hasErrors = false;
            StateHasChanged();
            
            // Polling: Esperar a que la Azure Function cree el archivo LOG (máximo 2 minutos)
            var maxAttempts = 24; // 24 intentos × 5 segundos = 2 minutos
            var processed = false;
            
            for (var attempt = 0; attempt < maxAttempts; attempt++)
            {
                await Task.Delay(5000); // Esperar 5 segundos entre intentos
                
                // Verificar si existe el archivo LOG específico de este CSV
                processed = await ImportService.IsProcessingCompleteAsync(result.LogBlobName, CancellationToken.None);
                if (processed)
                {
                    break;
                }
                
                // Actualizar mensaje cada 3 intentos (cada 15 segundos)
                if (attempt % 3 == 0 && attempt > 0)
                {
                    var elapsed = (attempt + 1) * 5;
                    _currentStep = $"⏳ Procesando... ({elapsed} segundos transcurridos)";
                    StateHasChanged();
                }
            }
            
            // Mostrar resultado final
            if (processed)
            {
                _currentStep = null;
                _statusMessage = $"✅ Archivo procesado exitosamente: {_file.Name}";
                
                // Recargar metadatos de simulación
                await CheckSimulationData();
            }
            else
            {
                _currentStep = null;
                _statusMessage = $"⚠️ Archivo subido, pero el procesamiento está tardando más de lo esperado. Revisa los logs en unos minutos.";
                _hasErrors = false; // No es un error crítico
            }
        }
        else
        {
            _currentStep = null;
            _statusMessage = $"❌ Error: {result.Message}";
            _hasErrors = true;
            _logUri = null; // No mostrar log si falla la validación inicial
        }
    }
    catch (Exception ex)
    {
        _currentStep = null;
        _statusMessage = $"❌ Error inesperado: {ex.Message}";
        _hasErrors = true;
        _logUri = null;
    }
    finally
    {
        _busy = false;
    }
}

    private string GetStepAlertClass()
    {
        return _busy ? "alert-warning" : "alert-info";
    }

    private string GetStepIcon()
    {
        return _busy ? "bi bi-hourglass-split" : "bi bi-info-circle";
    }

    private string GetStatusAlertClass()
    {
        if (_statusMessage?.StartsWith("✅") == true)
            return "alert-success";
        if (_statusMessage?.StartsWith("❌") == true)
            return "alert-danger";
        return "alert-warning";
    }

    private string GetStatusIcon()
    {
        if (_statusMessage?.StartsWith("✅") == true)
            return "bi bi-check-circle-fill text-success";
        if (_statusMessage?.StartsWith("❌") == true)
            return "bi bi-x-circle-fill text-danger";
        return "bi bi-exclamation-triangle-fill text-warning";
    }

    private string GetFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
